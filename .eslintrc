{
    "root": true,
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "block-scoped-var": "error",
        "brace-style": [
            "error",
            "1tbs"
        ],
        "camelcase": "warn",
        "computed-property-spacing": [
            "error",
            "never"
        ],
        "constructor-super": "error",
        "curly": "error",
        "comma-dangle": [
            "error",
            "never"
        ],
        "eol-last": "error",
        "eqeqeq": [
            "error",
            "smart"
        ],
        "keyword-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "max-len": [
            "warn",
            150
        ],
        "no-const-assign": "error",
        "no-extend-native": "error",
        "no-mixed-spaces-and-tabs": "error",
        "no-this-before-super": "error",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "prefer-template": "error",
        "quotes": [
            "error",
            "single",
            "avoid-escape"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-unary-ops": "error",
        "valid-typeof": [
            "error",
            {
                "requireStringLiterals": true
            }
        ]
    },
    "overrides": []
}
